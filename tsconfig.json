{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": false,
    "moduleResolution": "node",
    "lib": [
      "ES2019",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/"
  ]
}